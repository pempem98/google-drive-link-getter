{
  "manifest_version": 3,
  "name": "Google Drive Link Getter",
  "version": "1.5.0",
  "description": "Extracts file names and share links from Google Drive folders",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite",
    "storage",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; style-src 'self' https://cdn.jsdelivr.net; object-src 'self'"
  },
  "icons": {
    "16": "assets/16x16.png",
    "48": "assets/48x48.png",
    "128": "assets/128x128.png"
  }
}
